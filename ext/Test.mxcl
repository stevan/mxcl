
(defvar *count* 0)
(defvar *fails* 0)

(defun diag (msg) (say "# " msg))

(defun todo (msg)
    (diag (~ "TODO:" msg)))

(defun pass (msg)
    (do
        (set! *count* (+ *count* 1))
        (say "ok " (stringify *count*) " - " msg)
        ()))

(defun fail (msg)
    (do
        (set! *count* (+ *count* 1))
        (set! *fails* (+ *fails* 1))
        (say "not ok " *count* " - " msg)
        ()))

(defun ok (test msg)
    (if (boolify test) (pass msg) (fail msg)))

(defun is (got expected msg)
    (let (result (eq? got expected))
        (do (ok result msg)
            (or result
                (do
                    (diag (~ "Failed test " msg))
                    (diag (~ "       got: " got))
                    (diag (~ "  expected: " expected)))))))

(defun done ()
    (if (!= *fails* 0)
        (do (say (~ "1.." *count*))
            (diag (~ (~ "looks like you failed " *fails*)
                     (~ " test(s) of " *count*))))
        (say (~ "1.." *count*))))

()
